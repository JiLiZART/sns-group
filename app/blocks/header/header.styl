$ctx = header

.{$ctx}
	position fixed
	top 0
	left 0
	right 0
	z-index 10
	display flex
	height 80px
	background-color black

	.{$ctx}__logo
		position relative
		align-self center
		z-index 9

	.{$ctx}__menu-bar
		position relative
		display none
		width 40px
		height 30px
		margin 25px 20px
		margin-left auto

		transform: rotate(0deg);
		transition: .5s ease-in-out;
		cursor: pointer;

		+mobile()
			display inline-block

	.{$ctx}__bar-line
		display: block;
		position: absolute;
		height: 2px;
		width: 100%;
		background: white;
		border-radius: 9px;
		opacity: 1;
		left: 0;
		transform: rotate(0deg);
		transition: .5s ease-in-out;

		&:nth-child(1)
			top: 0;

		&:nth-child(2)
			top: 13px;

		&:nth-child(3)
			top: 28px;

	.{$ctx}__menu-bar_active .{$ctx}__bar-line
		&:nth-child(1)
			top: 13px;
			transform: rotate(135deg);

		&:nth-child(2)
			opacity 0
			left -40px

		&:nth-child(3)
			top: 13px;
			transform: rotate(-135deg);

	.{$ctx}__menu
		align-self center
		margin-left auto
		height auto

		+mobile()
			position absolute
			top -1000%
			left 0
			right 0
			z-index 8
			width 100%
			transition: .25s ease-in-out;
			display flex
			flex-direction column
			text-align center

			&_active
				top 80px

	.{$ctx}__menu-item
		margin-left 30px
		height 80px
		position relative
		display inline-block
		color rgba(white, 0.64)
		font-size 14px
		font-weight 300
		line-height 80px
		text-decoration none
		text-transform uppercase
		background-color black

		&:hover
			color rgba(white, 1)

		&:after
			content ''
			display none
			position absolute
			left 50%
			bottom 0
			transform translateX(-50%)
			width 91px
			height 3px
			background-color #db3552

		&_active
			&:after
				display block

		+mobile()
			display block
			width 100%
			margin-left 0
